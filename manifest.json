{
  "manifest_version": 3,
  "name": "Teamly Article Downloader",
  "version": "1.0",
  "description": "Downloads Teamly articles as Markdown",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.teamly.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
} 